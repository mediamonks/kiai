{
  "root": true,
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": false
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["import", "prettier"],
  "settings": {
    "import/resolver": {
      "node": true,
      "typescript": true
    }
  },
  "rules": {
    "global-require": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "linebreak-style": 0,
    "max-len": ["error", { "code": 100, "tabWidth": 2 }],
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": true,
        "arrowParens": "avoid"
      }
    ]
  }
}
